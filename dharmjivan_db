CREATE TABLE opening_hours (
    day_id INT(1) PRIMARY KEY, -- 1=Sunday, 2=Monday... 7=Saturday
    day_name VARCHAR(10) NOT NULL,
    hours_open TIME,
    hours_close TIME
);

